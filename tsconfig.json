{
        "compilerOptions": {
                "target": "ESNext",
                "esModuleInterop": true,
                "module": "ESNext",
                "moduleResolution": "node",
                "noImplicitAny": true,
                "removeComments": true,
                "alwaysStrict": true,
                "strict": true,
                "noUnusedParameters": true,
                "experimentalDecorators": true,
                "lib": [
                        "ESNext"
                ],
                "baseUrl": "src/",
                "noUnusedLocals": true,
                "composite": true,
                "declaration": true,
                "declarationMap": true,
                "rootDir": "src/",
                "outDir": "lib/",
                "typeRoots": [
                        "node_modules/@types/"
                ],
                "types": [
                        "node"
                ]
        },
        "include": [
                "src/**/*"
        ],
        "exclude": [
                "node_modules/",
                ".vscode",
                ".gitignore",
                ".clang-format",
                "package-lock.json",
                "*.code-workspace"
        ]
}